@page "/studentmessages"
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject Data.AppDbContext Context
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Gnosis - Student Messages</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Messages...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to access messages.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="student-messages">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>Message Center</h2>
            <div class="header-actions">
                <button class="btn btn-primary" @onclick="ShowNewMessageModal">
                    New Message
                </button>
                <div class="message-stats">
                    <span class="stat-item @(activeFilter == "all" ? "active" : "")" @onclick='() => SetFilter("all")'>
                        All: @allMessagesCount
                    </span>
                    <span class="stat-item @(activeFilter == "unread" ? "active" : "")" @onclick='() => SetFilter("unread")'>
                        Unread: @unreadMessagesCount
                    </span>
                    <span class="stat-item @(activeFilter == "sent" ? "active" : "")" @onclick='() => SetFilter("sent")'>
                        Sent: @sentMessagesCount
                    </span>
                </div>
            </div>
        </div>

        <div class="messages-container">
            @if (isLoading)
            {
                <div class="loading">Loading messages...</div>
            }
            else
            {
                <div class="messages-layout">
                    <div class="messages-list">
                        <div class="list-header">
                            <h3>Messages</h3>
                            <div class="search-box">
                                <input type="text" @bind="searchTerm" @oninput="OnSearch" placeholder="Search messages..." class="search-input" />
                            </div>
                        </div>

                        <div class="messages-scroll">
                            @foreach (var message in filteredMessages)
                            {
                                <div class="message-item @(selectedMessage?.Id == message.Id ? "selected" : "") @(message.IsRead ? "" : "unread")"
                                     @onclick="() => SelectMessage(message)">
                                    <div class="message-avatar">
                                        @if (message.SenderRole == "Student")
                                        {
                                            <div class="avatar student">🎓</div>
                                        }
                                        else if (message.SenderRole == "Teacher")
                                        {
                                            <div class="avatar teacher">👨‍🏫</div>
                                        }
                                        else
                                        {
                                            <div class="avatar admin">👤</div>
                                        }
                                    </div>
                                    <div class="message-preview">
                                        <div class="message-header">
                                            <span class="sender-name">
                                                @if (IsCurrentUserSender(message))
                                                {
                                                    <text>You → @message.RecipientName</text>
                                                }
                                                else
                                                {
                                                    <text>@message.SenderName → You</text>
                                                }
                                            </span>
                                            <span class="message-time">@FormatMessageTime(message.CreatedAt)</span>
                                        </div>
                                        <div class="message-subject">@message.Subject</div>
                                        <div class="message-excerpt">@GetMessageExcerpt(message.Content)</div>
                                        <div class="message-meta">
                                            <span class="sender-role">
                                                @if (IsCurrentUserSender(message))
                                                {
                                                    <text>To: @message.RecipientRole</text>
                                                }
                                                else
                                                {
                                                    <text>From: @message.SenderRole</text>
                                                }
                                            </span>
                                            @if (!message.IsRead && message.SenderRole != currentUserRole)
                                            {
                                                <span class="unread-badge">NEW</span>
                                            }
                                            @if (message.Replies.Any())
                                            {
                                                <span class="replies-count">💬 @message.Replies.Count</span>
                                            }
                                        </div>
                                    </div>
                                    @if (message.SenderRole == currentUserRole)
                                    {
                                        <button class="delete-message-btn" @onclick:stopPropagation="true" @onclick="() => DeleteSingleMessage(message)" title="Delete this message">
                                            🗑️
                                        </button>
                                    }
                                </div>
                            }

                            @if (!filteredMessages.Any())
                            {
                                <div class="empty-messages">
                                    <div class="empty-icon"></div>
                                    <h3>No Messages Found</h3>
                                    <p>@(string.IsNullOrEmpty(searchTerm) ? "You don't have any messages yet." : "No messages match your search.")</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="message-detail">
                        @if (selectedMessage != null)
                        {
                            <div class="detail-header">
                                <div class="message-info">
                                    <h3>@selectedMessage.Subject</h3>
                                    <div class="message-sender">
                                        <div class="sender-avatar">
                                            @if (IsCurrentUserSender(selectedMessage))
                                            {
                                                <div class="avatar student">🎓</div>
                                            }
                                            else if (selectedMessage.SenderRole == "Teacher")
                                            {
                                                <div class="avatar teacher">👨‍🏫</div>
                                            }
                                            else
                                            {
                                                <div class="avatar admin">👤</div>
                                            }
                                        </div>
                                        <div class="sender-details">
                                            @if (IsCurrentUserSender(selectedMessage))
                                            {
                                                <div class="sender-name">You → @selectedMessage.RecipientName</div>
                                                <div class="sender-email">@selectedMessage.RecipientEmail • To: @selectedMessage.RecipientRole</div>
                                            }
                                            else
                                            {
                                                <div class="sender-name">@selectedMessage.SenderName → You</div>
                                                <div class="sender-email">@selectedMessage.SenderEmail • From: @selectedMessage.SenderRole</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="message-actions">
                                    @if (!IsCurrentUserSender(selectedMessage))
                                    {
                                        <button class="btn btn-outline" @onclick="MarkAsRead" title="Mark as read">
                                            @if (selectedMessage.IsRead)
                                            {
                                                <span>Mark Unread</span>
                                            }
                                            else
                                            {
                                                <span>Mark Read</span>
                                            }
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="message-conversation">
                                <div class="conversation-scroll-area">
                                    <div class="conversation-item @(IsCurrentUserSender(selectedMessage) ? "sent" : "received")">
                                        <div class="message-content">
                                            <div class="message-text">@selectedMessage.Content</div>
                                            <div class="message-time">@FormatDetailedTime(selectedMessage.CreatedAt)</div>
                                            @if (IsCurrentUserSender(selectedMessage))
                                            {
                                                <button class="delete-single-btn" @onclick="() => DeleteSingleReply(selectedMessage)" title="Delete this message">
                                                    🗑️
                                                </button>
                                            }
                                        </div>
                                    </div>

                                    @foreach (var reply in selectedMessage.Replies.OrderBy(r => r.CreatedAt))
                                    {
                                        <div class="conversation-item @(reply.SenderRole == currentUserRole ? "sent" : "received")">
                                            <div class="message-content">
                                                <div class="reply-header">
                                                    <span class="replier-name">@reply.SenderName</span>
                                                    <span class="replier-role">@reply.SenderRole</span>
                                                </div>
                                                <div class="message-text">@reply.ReplyContent</div>
                                                <div class="message-time">@FormatDetailedTime(reply.CreatedAt)</div>
                                                @if (reply.SenderRole == currentUserRole)
                                                {
                                                    <button class="delete-single-btn" @onclick="() => DeleteSingleReply(reply)" title="Delete this reply">
                                                        🗑️
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="reply-section">
                                    <form class="reply-form">
                                        <div class="form-group">
                                            <textarea @bind="replyMessage" class="form-control"
                                                      placeholder="Type your reply here..."></textarea>
                                        </div>
                                        <div class="form-actions">
                                            <button type="button" class="btn btn-outline" @onclick="ClearReply">
                                                Clear
                                            </button>
                                            <button type="button" class="btn btn-primary" @onclick="SendReply"
                                                    disabled="@string.IsNullOrWhiteSpace(replyMessage)">
                                                Send Reply
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="no-message-selected">
                                <div class="select-message-prompt">
                                    <div class="prompt-icon"></div>
                                    <h3>Select a Message</h3>
                                    <p>Choose a message from the list to view its contents and reply.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    @if (showNewMessageModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>✉️ New Message</h3>
                    <button class="close-btn" @onclick="CloseNewMessageModal">×</button>
                </div>
                <div class="modal-body">

                    <form class="new-message-form">
                        <div class="form-group">
                            <label>Search Users</label>
                            <input type="text" @bind="userSearchTerm" @oninput="OnUserSearch"
                                   placeholder="Search by name or email..." class="form-control search-input" />
                        </div>

                        <div class="form-group">
                            <label>Filter by Role</label>
                            <div class="role-filter-buttons">
                                <button type="button" class="role-filter-btn @(selectedUserRole == "all" ? "active" : "")"
                                        @onclick='() => SetUserRoleFilter("all")'>
                                    All Users (@allUsers.Count)
                                </button>
                                <button type="button" class="role-filter-btn @(selectedUserRole == "Teacher" ? "active" : "")"
                                        @onclick='() => SetUserRoleFilter("Teacher")'>
                                    Teachers (@allUsers.Count(u => u.Role == "Teacher"))
                                </button>
                                <button type="button" class="role-filter-btn @(selectedUserRole == "Student" ? "active" : "")"
                                        @onclick='() => SetUserRoleFilter("Student")'>
                                    Students (@allUsers.Count(u => u.Role == "Student"))
                                </button>
                                <button type="button" class="role-filter-btn @(selectedUserRole == "Admin" ? "active" : "")"
                                        @onclick='() => SetUserRoleFilter("Admin")'>
                                    Administrators (@allUsers.Count(u => u.Role == "Admin"))
                                </button>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Select Recipient</label>
                            <div class="users-list">
                                @if (isLoadingUsers)
                                {
                                    <div class="loading-users">
                                        <div class="spinner"></div>
                                        <p>Loading users...</p>
                                    </div>
                                }
                                else if (!string.IsNullOrEmpty(userLoadError))
                                {
                                    <div class="error-loading-users">
                                        <div class="error-icon">❌</div>
                                        <h4>Error Loading Users</h4>
                                        <p>@userLoadError</p>
                                        <button class="btn btn-outline" @onclick="LoadUsersAsync">Retry</button>
                                    </div>
                                }
                                else if (filteredUsers.Any())
                                {
                                    foreach (var user in filteredUsers)
                                    {
                                        <div class="user-item @(selectedUser?.Id == user.Id ? "selected" : "")"
                                             @onclick="() => SelectUser(user)">
                                            <div class="user-avatar @user.Role.ToLower()">
                                                @if (user.Role == "Student")
                                                {
                                                    <text>🎓</text>
                                                }
                                                else if (user.Role == "Teacher")
                                                {
                                                    <text>👨‍🏫</text>
                                                }
                                                else
                                                {
                                                    <text>👤</text>
                                                }
                                            </div>
                                            <div class="user-info">
                                                <div class="user-name">@user.Name @user.LastName</div>
                                                <div class="user-details">
                                                    <span class="user-email">@user.Email</span>
                                                    <span class="user-role">@user.Role</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="no-users-found">
                                        <div class="empty-icon"></div>
                                        <h4>No Users Found</h4>
                                        <p>Try adjusting your search or filter criteria</p>
                                        <p style="font-size: 12px; margin-top: 10px;">
                                            Total users in database: @allUsers.Count<br />
                                            Teachers: @allUsers.Count(u => u.Role == "Teacher")<br />
                                            Students: @allUsers.Count(u => u.Role == "Student")<br />
                                            Administrators: @allUsers.Count(u => u.Role == "Admin")
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Subject</label>
                            <input type="text" @bind="newMessage.Subject" class="form-control"
                                   placeholder="Enter message subject..." />
                        </div>

                        <div class="form-group">
                            <label>Message</label>
                            <textarea @bind="newMessage.Content" class="form-control message-textarea"
                                      placeholder="Type your message here..." rows="6"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseNewMessageModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SendNewMessage"
                            disabled="@(!CanSendMessage())">
                        Send Message
                    </button>
                </div>
            </div>
        </div>
    }
}

@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;
    private bool showNewMessageModal = false;

    private List<Message> allMessages = new();
    private List<Message> filteredMessages = new();
    private Message? selectedMessage = null;
    private string activeFilter = "all";
    private string searchTerm = "";
    private string replyMessage = "";
    private string currentUserRole = "Student";

    private int allMessagesCount = 0;
    private int unreadMessagesCount = 0;
    private int sentMessagesCount = 0;

    private NewMessageModel newMessage = new();
    private List<User> allUsers = new();
    private List<User> filteredUsers = new();
    private string userSearchTerm = "";
    private string selectedUserRole = "all";
    private User? selectedUser = null;
    private bool isLoadingUsers = false;
    private string userLoadError = "";

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadData();
        }
    }

    private async Task CheckAuthorization()
    {
        try
        {
            for (int i = 0; i < 20; i++)
            {
                if (AuthStateService.CurrentUser != null)
                    break;
                await Task.Delay(100);
            }

            var user = AuthStateService.CurrentUser;
            isAuthorized = user != null && user.Role == "Student";
            isAuthChecked = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authorization error: {ex.Message}");
            isAuthChecked = true;
            StateHasChanged();
        }
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            allMessages = await Context.Messages
                .Include(m => m.Replies)
                .Where(m => m.SenderId == currentUser.Id || m.RecipientId == currentUser.Id)
                .OrderByDescending(m => m.CreatedAt)
                .ToListAsync();

            UpdateMessageStats();
            ApplyFilters();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading data: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadUsersAsync()
    {
        try
        {
            isLoadingUsers = true;
            userLoadError = "";
            StateHasChanged();

            Console.WriteLine("Starting to load users from database...");

            var testConnection = await Context.Users.AnyAsync();
            Console.WriteLine($"Database connection test: {testConnection}");

            var currentUser = AuthStateService.CurrentUser;

            allUsers = await Context.Users
                .Where(u => u.Id != currentUser.Id)
                .OrderBy(u => u.Name)
                .ThenBy(u => u.LastName)
                .ToListAsync();

            Console.WriteLine($"Successfully loaded {allUsers.Count} users from database");

            if (allUsers.Any())
            {
                Console.WriteLine("Sample users:");
                foreach (var user in allUsers.Take(5))
                {
                    Console.WriteLine($"- {user.Name} {user.LastName} ({user.Email}) - {user.Role}");
                }
            }
            else
            {
                Console.WriteLine("No users found in database");
                userLoadError = "No users found in the database.";
            }

            ApplyUserFilters();

            isLoadingUsers = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
            userLoadError = $"Failed to load users: {ex.Message}";
            allUsers = new List<User>();
            filteredUsers = new List<User>();
            isLoadingUsers = false;
            StateHasChanged();
        }
    }

    private void UpdateMessageStats()
    {
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null) return;

        allMessagesCount = allMessages.Count;
        unreadMessagesCount = allMessages.Count(m => !m.IsRead && m.SenderId != currentUser.Id);
        sentMessagesCount = allMessages.Count(m => m.SenderId == currentUser.Id);
    }

    private void ApplyFilters()
    {
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null) return;

        var query = allMessages.AsQueryable();

        switch (activeFilter)
        {
            case "unread":
                query = query.Where(m => !m.IsRead && m.SenderId != currentUser.Id);
                break;
            case "sent":
                query = query.Where(m => m.SenderId == currentUser.Id);
                break;
            case "all":
            default:
                break;
        }

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(m =>
                m.Subject.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                m.Content.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                m.SenderName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (m.RecipientName != null && m.RecipientName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ||
                m.SenderRole.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                (m.RecipientRole != null && m.RecipientRole.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            );
        }

        filteredMessages = query.OrderByDescending(m => m.CreatedAt).ToList();
    }

    private void ApplyUserFilters()
    {
        Console.WriteLine($"Applying user filters: search='{userSearchTerm}', role='{selectedUserRole}'");
        Console.WriteLine($"Total users available: {allUsers?.Count ?? 0}");

        if (allUsers == null || !allUsers.Any())
        {
            filteredUsers = new List<User>();
            Console.WriteLine("No users available to filter");
            return;
        }

        var query = allUsers.AsQueryable();

        if (selectedUserRole != "all")
        {
            query = query.Where(u => u.Role == selectedUserRole);
            Console.WriteLine($"Applied role filter: {selectedUserRole}");
        }

        if (!string.IsNullOrWhiteSpace(userSearchTerm))
        {
            var search = userSearchTerm.ToLower();
            query = query.Where(u =>
                (u.Name != null && u.Name.ToLower().Contains(search)) ||
                (u.LastName != null && u.LastName.ToLower().Contains(search)) ||
                (u.Email != null && u.Email.ToLower().Contains(search))
            );
            Console.WriteLine($"Applied search filter: {userSearchTerm}");
        }

        filteredUsers = query.OrderBy(u => u.Name).ThenBy(u => u.LastName).ToList();
        Console.WriteLine($"Filtered users count: {filteredUsers.Count}");
    }

    private void SetFilter(string filter)
    {
        activeFilter = filter;
        ApplyFilters();
        StateHasChanged();
    }

    private void OnSearch(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        ApplyFilters();
        StateHasChanged();
    }

    private void OnUserSearch(ChangeEventArgs e)
    {
        userSearchTerm = e.Value?.ToString() ?? "";
        ApplyUserFilters();
        StateHasChanged();
    }

    private void SetUserRoleFilter(string role)
    {
        selectedUserRole = role;
        ApplyUserFilters();
        StateHasChanged();
    }

    private void SelectUser(User user)
    {
        selectedUser = user;
        newMessage.RecipientId = user.Id;
        newMessage.RecipientType = user.Role;
        Console.WriteLine($"Selected user: {user.Name} {user.LastName} ({user.Role})");
        StateHasChanged();
    }

    private async void SelectMessage(Message message)
    {
        selectedMessage = message;

        var currentUser = AuthStateService.CurrentUser;
        if (currentUser != null && !message.IsRead && message.SenderId != currentUser.Id)
        {
            await MarkMessageAsRead(message);
        }

        StateHasChanged();
    }

    private async Task MarkMessageAsRead(Message message)
    {
        try
        {
            message.IsRead = true;
            message.ReadAt = DateTime.Now;
            await Context.SaveChangesAsync();
            UpdateMessageStats();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking message as read: {ex.Message}");
        }
    }

    private async Task MarkAsRead()
    {
        if (selectedMessage == null) return;

        try
        {
            selectedMessage.IsRead = !selectedMessage.IsRead;
            if (selectedMessage.IsRead)
            {
                selectedMessage.ReadAt = DateTime.Now;
            }
            else
            {
                selectedMessage.ReadAt = null;
            }

            await Context.SaveChangesAsync();
            UpdateMessageStats();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating message: {ex.Message}");
        }
    }

    private async Task DeleteSingleMessage(Message message)
    {
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null || message.SenderId != currentUser.Id) return;

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to delete this message? This action cannot be undone.");

        if (confirm)
        {
            try
            {
                if (message.Replies.Any())
                {
                    Context.MessageReplies.RemoveRange(message.Replies);
                }

                Context.Messages.Remove(message);
                await Context.SaveChangesAsync();

                if (selectedMessage?.Id == message.Id)
                {
                    selectedMessage = null;
                }

                await LoadData();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting message: {ex.Message}");
            }
        }
    }

    private async Task DeleteSingleReply(object messageOrReply)
    {
        var currentUser = AuthStateService.CurrentUser;
        if (currentUser == null) return;

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to delete this message? This action cannot be undone.");

        if (confirm)
        {
            try
            {
                if (messageOrReply is Message message)
                {
                    if (message.SenderId == currentUser.Id)
                    {
                        Context.Messages.Remove(message);
                    }
                }
                else if (messageOrReply is MessageReply reply)
                {
                    if (reply.SenderRole == "Student")
                    {
                        Context.MessageReplies.Remove(reply);
                    }
                }

                await Context.SaveChangesAsync();
                await LoadData();

                if (selectedMessage != null)
                {
                    selectedMessage = allMessages.FirstOrDefault(m => m.Id == selectedMessage.Id);
                }

            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting message: {ex.Message}");
            }
        }
    }

    private async Task DeleteMessage()
    {
        if (selectedMessage == null) return;

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            "Are you sure you want to delete this message and all its replies?");

        if (confirm)
        {
            try
            {
                Context.MessageReplies.RemoveRange(selectedMessage.Replies);

                Context.Messages.Remove(selectedMessage);

                await Context.SaveChangesAsync();
                await LoadData();

                selectedMessage = null;
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting message: {ex.Message}");
            }
        }
    }

    private async Task SendReply()
    {
        if (selectedMessage == null || string.IsNullOrWhiteSpace(replyMessage)) return;

        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not found.");
                return;
            }

            var reply = new MessageReply
            {
                MessageId = selectedMessage.Id,

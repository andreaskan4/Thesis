@page "/studenthome"
@using Thesis.Components.Layout
@layout MainLayout
@inject AuthStateService AuthStateService
@inject NavigationManager Navigation
@inject Data.AppDbContext Context
@using Thesis.Components.Shared
@using Thesis.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Gnosis - Dashboard</PageTitle>

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}
else if (AuthStateService.IsLoggedIn)
{
    <div class="top-header">
        <div class="header-left">
            <h1>Dashboard</h1>
            <p class="welcome-text">Welcome back, @AuthStateService.CurrentUser?.Name!</p>
        </div>
        <div class="header-right">
            <div class="date-display">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</div>
        </div>
    </div>

    @if (showLogoutModal)
    {
        <div class="modal-overlay">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Confirm Logout</h3>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline" @onclick="CloseLogoutModal">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmLogout">Logout</button>
                </div>
            </div>
        </div>
    }

    <div class="content-area">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-value">@enrolledCoursesCount</div>
                    <div class="stat-label">Enrolled Courses</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-value">@exercisesCount</div>
                    <div class="stat-label">Exercises</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-value">@pendingExercisesCount</div>
                    <div class="stat-label">Pending</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-content">
                    <div class="stat-value">@(averageGrade.HasValue? averageGrade.Value.ToString("0.0") : "N/A")</div>
                    <div class="stat-label">Average Grade</div>
                </div>
            </div>
        </div>

        <div class="content-grid">
            <div class="content-card recent-activity">
                <div class="card-header">
                    <h3>Recent Messages</h3>
                    <a href="/studentmessages" class="view-all">View All</a>
                </div>
                <div class="card-content">
                    <div class="activity-list">
                        @if (recentMessages.Any())
                        {
                            @foreach (var message in recentMessages)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon">💬</div>
                                    <div class="activity-details">
                                        <div class="activity-title">New message from @message.SenderName</div>
                                        <div class="activity-time">@FormatActivityTime(message.CreatedAt)</div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-activity">
                                <p>No recent activity</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="content-card quick-actions">
                <div class="card-header">
                    <h3>Quick Actions</h3>
                </div>
                <div class="card-content">
                    <div class="actions-grid">
                        <button class="action-btn" @onclick="NavigateToCourses">
                            <span class="action-text">My Courses</span>
                        </button>
                        <button class="action-btn" @onclick="NavigateToExercises">
                            <span class="action-text">Exercises</span>
                        </button>
                        <button class="action-btn" @onclick="NavigateToMessages">
                            <span class="action-text">Messages</span>
                        </button>
                        <button class="action-btn" @onclick="NavigateToGrades">
                            <span class="action-text">Grades</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="content-card">
            <div class="card-header">
                <h3>Upcoming Exercises</h3>
                <a href="/exercises" class="view-all">View All</a>
            </div>
            <div class="card-content">
                @if (upcomingExercises.Any())
                {
                    <div class="assignments-list">
                        @foreach (var exercise in upcomingExercises)
                        {
                            <div class="assignment-item">
                                <div class="assignment-info">
                                    <div class="assignment-title">@exercise.Title</div>
                                    <div class="assignment-course">@exercise.Course?.Name</div>
                                    <div class="assignment-due-date">Due: @exercise.DueDate.ToString("MMM dd, yyyy")</div>
                                    <div class="assignment-points">Max Points: @exercise.MaxPoints</div>
                                </div>
                                <div class="assignment-status @(exercise.DueDate < DateTime.Now ? "overdue" : "pending")">
                                    @if (exercise.DueDate < DateTime.Now)
                                    {
                                        <span>Overdue</span>
                                    }
                                    else
                                    {
                                        <span>Due in @((exercise.DueDate - DateTime.Now).Days) days</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-assignments">
                        <p>No upcoming exercises</p>
                    </div>
                }
            </div>
        </div>

        <div class="content-card full-width">
            <div class="card-header">
                <h3>Course Schedule</h3>
                <div class="calendar-controls">
                    <button class="btn btn-outline btn-sm" @onclick="PreviousWeek">← Previous</button>
                    <span class="current-week">Week of @currentWeekStart.ToString("MMM dd") - @currentWeekEnd.ToString("MMM dd, yyyy")</span>
                    <button class="btn btn-outline btn-sm" @onclick="NextWeek">Next →</button>
                </div>
            </div>
            <div class="card-content">
                <div class="calendar">
                    <div class="calendar-header">
                        <div class="time-column">Time</div>
                        @foreach (var day in weekDays)
                        {
                            <div class="day-header @(day.Date == DateTime.Today ? "today" : "")">
                                <div class="day-name">@day.ToString("ddd")</div>
                                <div class="day-date">@day.ToString("MM/dd")</div>
                            </div>
                        }
                    </div>
                    <div class="calendar-body">
                        @foreach (var timeSlot in timeSlots)
                        {
                            <div class="calendar-row">
                                <div class="time-slot">@timeSlot</div>
                                @foreach (var day in weekDays)
                                {
                                    <div class="calendar-cell @(day.Date == DateTime.Today ? "today" : "")">
                                        @{
                                            var schedule = GetScheduleForTimeSlot(day, timeSlot);
                                        }
                                        @if (schedule != null)
                                        {
                                            <div class="course-event" style="background-color: @GetCourseColor(schedule.CourseId)">
                                                <div class="course-name">@schedule.Course?.Name</div>
                                                <div class="course-time">@schedule.StartTime.ToString("hh\\:mm") - @schedule.EndTime.ToString("hh\\:mm")</div>
                                                <div class="course-room">@schedule.Room</div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="home-container">
        <div class="welcome-section">
            <h1>Welcome to Gnosis</h1>
            <p>This is your Gnosis Dashboard.</p>
            <div class="navigation-links mt-4">
                <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                <a href="/register" class="btn btn-primary">Register</a>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private bool showLogoutModal = false;
    private int enrolledCoursesCount = 0;
    private int exercisesCount = 0;
    private int pendingExercisesCount = 0;
    private double? averageGrade = null;
    private List<Message> recentMessages = new();
    private List<Exercise> upcomingExercises = new();
    private List<Schedule> courseSchedules = new();
    private List<Enrollment> enrollments = new();
    private DateTime currentWeekStart;
    private DateTime currentWeekEnd;
    private List<DateTime> weekDays = new();
    private List<string> timeSlots = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStudentData();
        InitializeCalendar();
        isLoading = false;
    }

    private async Task LoadStudentData()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            enrollments = await Context.Enrollments
                .Include(e => e.Course)
                .Where(e => e.StudentId == currentUser.Id)
                .ToListAsync();

            enrolledCoursesCount = enrollments.Count;

            var courseIds = enrollments.Select(e => e.CourseId).ToList();
            var exercises = await Context.Exercises
                .Include(e => e.Course)
                .Where(e => courseIds.Contains(e.CourseId) && e.IsPublished)
                .ToListAsync();

            exercisesCount = exercises.Count;
            pendingExercisesCount = exercises.Count(e => e.DueDate > DateTime.Now);
            upcomingExercises = exercises
                .Where(e => e.DueDate > DateTime.Now)
                .OrderBy(e => e.DueDate)
                .Take(5)
                .ToList();

            var grades = await Context.Grades
                .Where(g => g.StudentId == currentUser.Id)
                .ToListAsync();

            if (grades.Any(g => g.GradeValue > 0))
            {
                averageGrade = grades.Where(g => g.GradeValue > 0).Average(g => g.GradeValue);
            }

            recentMessages = await Context.Messages
                .Where(m => m.RecipientId == currentUser.Id || m.SenderId == currentUser.Id)
                .OrderByDescending(m => m.CreatedAt)
                .Take(5)
                .ToListAsync();

            courseSchedules = await Context.Schedules
                .Include(s => s.Course)
                .Where(s => courseIds.Contains(s.CourseId))
                .ToListAsync();

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading student data: {ex.Message}");
        }
    }

    private void InitializeCalendar()
    {
        currentWeekStart = DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek + (int)DayOfWeek.Monday);
        currentWeekEnd = currentWeekStart.AddDays(6);
        UpdateWeekDays();
        InitializeTimeSlots();
    }

    private void UpdateWeekDays()
    {
        weekDays.Clear();
        for (int i = 0; i < 7; i++)
        {
            weekDays.Add(currentWeekStart.AddDays(i));
        }
    }

    private void InitializeTimeSlots()
    {
        timeSlots.Clear();
        for (int hour = 8; hour <= 20; hour++)
        {
            timeSlots.Add($"{hour:00}:00");
        }
    }

    private Schedule? GetScheduleForTimeSlot(DateTime day, string timeSlot)
    {
        var time = TimeSpan.Parse(timeSlot);
        var dayOfWeek = day.DayOfWeek.ToString();

        var currentTime = new TimeOnly(time.Hours, time.Minutes);

        return courseSchedules.FirstOrDefault(s =>
            s.DayOfWeek == dayOfWeek &&
            s.StartTime <= currentTime &&
            s.EndTime > currentTime);
    }

    private string GetCourseColor(int courseId)
    {
        var colors = new[] { "#4f46e5", "#059669", "#dc2626", "#7c3aed", "#ea580c", "#0891b2", "#65a30d", "#9333ea" };
        return colors[courseId % colors.Length];
    }

    private void PreviousWeek()
    {
        currentWeekStart = currentWeekStart.AddDays(-7);
        currentWeekEnd = currentWeekEnd.AddDays(-7);
        UpdateWeekDays();
        StateHasChanged();
    }

    private void NextWeek()
    {
        currentWeekStart = currentWeekStart.AddDays(7);
        currentWeekEnd = currentWeekEnd.AddDays(7);
        UpdateWeekDays();
        StateHasChanged();
    }

    private string FormatActivityTime(DateTime dateTime)
    {
        var now = DateTime.Now;
        var difference = now - dateTime;

        if (difference.TotalMinutes < 1)
            return "Just now";
        if (difference.TotalHours < 1)
            return $"{(int)difference.TotalMinutes}m ago";
        if (difference.TotalDays < 1)
            return $"{(int)difference.TotalHours}h ago";
        if (difference.TotalDays < 7)
            return $"{(int)difference.TotalDays}d ago";

        return dateTime.ToString("MMM dd");
    }

    private void NavigateToCourses() => Navigation.NavigateTo("/studentcourses");
    private void NavigateToExercises() => Navigation.NavigateTo("/studentex");
    private void NavigateToMessages() => Navigation.NavigateTo("/studentmessages");
    private void NavigateToGrades() => Navigation.NavigateTo("/studentgrades");

    private void ShowLogoutConfirmation() => showLogoutModal = true;
    private void CloseLogoutModal() => showLogoutModal = false;

    private async Task ConfirmLogout()
    {
        await AuthStateService.LogoutAsync();
        Navigation.NavigateTo("/", true);
    }
}

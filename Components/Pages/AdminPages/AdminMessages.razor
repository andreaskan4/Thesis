                    <!-- Messages List -->
                    <div class="messages-list">
                        <div class="list-header">
                            <h3>Messages</h3>
                            <div class="search-box">
                                <input type="text" @bind="searchTerm" @oninput="OnSearch" placeholder="Search messages..." class="search-input" />
                            </div>
                        </div>

                        <div class="messages-scroll">
                            @foreach (var message in filteredMessages)
                            {
                                <div class="message-item @(selectedMessage?.Id == message.Id ? "selected" : "") @(message.IsRead ? "" : "unread")"
                                     @onclick="() => SelectMessage(message)">
                                    <div class="message-avatar">
                                        @if (message.SenderRole == "Student")
                                        {
                                            <div class="avatar student">🎓</div>
                                        }
                                        else if (message.SenderRole == "Teacher")
                                        {
                                            <div class="avatar teacher">👨‍🏫</div>
                                        }
                                        else
                                        {
                                            <div class="avatar admin">👤</div>
                                        }
                                    </div>
                                    <div class="message-preview">
                                        <div class="message-header">
                                            <span class="sender-name">@message.SenderName</span>
                                            <span class="message-time">@FormatMessageTime(message.CreatedAt)</span>
                                        </div>
                                        <div class="message-subject">@message.Subject</div>
                                        <div class="message-excerpt">@GetMessageExcerpt(message.Content)</div>
                                        <div class="message-meta">
                                            <span class="sender-role">@message.SenderRole</span>
                                            @if (!message.IsRead)
                                            {
                                                <span class="unread-badge">NEW</span>
                                            }
                                            @if (message.Replies.Any())
                                            {
                                                <span class="replies-count">💬 @message.Replies.Count</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (!filteredMessages.Any())
                            {
                                <div class="empty-messages">
                                    <div class="empty-icon">📨</div>
                                    <h3>No Messages Found</h3>
                                    <p>@(string.IsNullOrEmpty(searchTerm) ? "You don't have any messages yet." : "No messages match your search.")</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Message Detail -->
                    <div class="message-detail">
                        @if (selectedMessage != null)
                        {
                            <div class="detail-header">
                                <div class="message-info">
                                    <h3>@selectedMessage.Subject</h3>
                                    <div class="message-sender">
                                        <div class="sender-avatar">
                                            @if (selectedMessage.SenderRole == "Student")
                                            {
                                                <div class="avatar student">🎓</div>
                                            }
                                            else if (selectedMessage.SenderRole == "Teacher")
                                            {
                                                <div class="avatar teacher">👨‍🏫</div>
                                            }
                                            else
                                            {
                                                <div class="avatar admin">👤</div>
                                            }
                                        </div>
                                        <div class="sender-details">
                                            <div class="sender-name">@selectedMessage.SenderName</div>
                                            <div class="sender-email">@selectedMessage.SenderEmail • @selectedMessage.SenderRole</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="message-actions">
                                    <button class="btn btn-outline" @onclick="MarkAsRead" title="Mark as read">
                                        @if (selectedMessage.IsRead)
                                        {
                                            <span>📭 Mark Unread</span>
                                        }
                                        else
                                        {
                                            <span>📬 Mark Read</span>
                                        }
                                    </button>
                                    <button class="btn btn-danger" @onclick="DeleteMessage" title="Delete message">
                                        🗑️ Delete
                                    </button>
                                </div>
                            </div>

                            <div class="message-conversation">
                                <!-- Original Message -->
                                <div class="conversation-item original">
                                    <div class="message-content">
                                        <div class="message-text">@selectedMessage.Content</div>
                                        <div class="message-time">@FormatDetailedTime(selectedMessage.CreatedAt)</div>
                                    </div>
                                </div>

                                <!-- Replies -->
                                @foreach (var reply in selectedMessage.Replies.OrderBy(r => r.CreatedAt))
                                {
                                    <div class="conversation-item @(reply.SenderRole == "Admin" ? "reply admin-reply" : "reply")">
                                        <div class="message-content">
                                            <div class="reply-header">
                                                <span class="replier-name">@reply.SenderName</span>
                                                <span class="replier-role">@reply.SenderRole</span>
                                            </div>
                                            <div class="message-text">@reply.ReplyContent</div>
                                            <div class="message-time">@FormatDetailedTime(reply.CreatedAt)</div>
                                        </div>
                                    </div>
                                }

                                <!-- Reply Form -->
                                <div class="reply-section">
                                    <h4>✏️ Write a Reply</h4>
                                    <form class="reply-form">
                                        <div class="form-group">
                                            <textarea @bind="replyMessage" class="form-control" rows="4"
                                                      placeholder="Type your reply here..."></textarea>
                                        </div>
                                        <div class="form-actions">
                                            <button type="button" class="btn btn-outline" @onclick="ClearReply">
                                                Clear
                                            </button>
                                            <button type="button" class="btn btn-primary" @onclick="SendReply"
                                                    disabled="@string.IsNullOrWhiteSpace(replyMessage)">
                                                Send Reply
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="no-message-selected">
                                <div class="select-message-prompt">
                                    <div class="prompt-icon">📨</div>
                                    <h3>Select a Message</h3>
                                    <p>Choose a message from the list to view its contents and reply.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isLoading = true;

    // Messages
    private List<Message> allMessages = new();
    private List<Message> filteredMessages = new();
    private Message? selectedMessage = null;
    private string activeFilter = "all";
    private string searchTerm = "";
    private string replyMessage = "";

    // Stats
    private int allMessagesCount = 0;
    private int unreadMessagesCount = 0;
    private int studentMessagesCount = 0;
    private int teacherMessagesCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            await LoadMessages();
        }
    }

    private async Task CheckAuthorization()
    {
        try
        {
            for (int i = 0; i < 20; i++)
            {
                if (AuthStateService.CurrentUser != null)
                    break;
                await Task.Delay(100);
            }

            var user = AuthStateService.CurrentUser;
            isAuthorized = user != null && user.Role == "Admin";
            isAuthChecked = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Authorization error: {ex.Message}");
            isAuthChecked = true;
            StateHasChanged();
        }
    }

    private async Task LoadMessages()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Load messages with replies
            allMessages = await Context.Messages
                .Include(m => m.Replies)
                .OrderByDescending(m => m.CreatedAt)
                .ToListAsync();

            UpdateMessageStats();
            ApplyFilters();

            isLoading = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading messages: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading messages: {ex.Message}");
            isLoading = false;
            StateHasChanged();
        }
    }

    private void UpdateMessageStats()
    {
        allMessagesCount = allMessages.Count;
        unreadMessagesCount = allMessages.Count(m => !m.IsRead);
        studentMessagesCount = allMessages.Count(m => m.SenderRole == "Student");
        teacherMessagesCount = allMessages.Count(m => m.SenderRole == "Teacher");
    }

    private void ApplyFilters()
    {
        var query = allMessages.AsQueryable();

        // Apply role filter
        switch (activeFilter)
        {
            case "unread":
                query = query.Where(m => !m.IsRead);
                break;
            case "students":
                query = query.Where(m => m.SenderRole == "Student");
                break;
            case "teachers":
                query = query.Where(m => m.SenderRole == "Teacher");
                break;
            case "all":
            default:
                break;
        }

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            query = query.Where(m =>
                m.Subject.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                m.Content.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                m.SenderName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                m.SenderEmail.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        filteredMessages = query.OrderByDescending(m => m.CreatedAt).ToList();
    }

    private void SetFilter(string filter)
    {
        activeFilter = filter;
        ApplyFilters();
        StateHasChanged();
    }

    private void OnSearch(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        ApplyFilters();
        StateHasChanged();
    }

    private async void SelectMessage(Message message)
    {
        selectedMessage = message;

        // Mark as read when selected
        if (!message.IsRead)
        {
            await MarkMessageAsRead(message);
        }

        StateHasChanged();
    }

    private async Task MarkMessageAsRead(Message message)
    {
        try
        {
            message.IsRead = true;
            message.ReadAt = DateTime.Now;
            await Context.SaveChangesAsync();
            UpdateMessageStats();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error marking message as read: {ex.Message}");
        }
    }

    private async Task MarkAsRead()
    {
        if (selectedMessage == null) return;

        try
        {
            selectedMessage.IsRead = !selectedMessage.IsRead;
            if (selectedMessage.IsRead)
            {
                selectedMessage.ReadAt = DateTime.Now;
            }
            else
            {
                selectedMessage.ReadAt = null;
            }

            await Context.SaveChangesAsync();
            UpdateMessageStats();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating message: {ex.Message}");
        }
    }

    private async Task DeleteMessage()
    {
        if (selectedMessage == null) return;

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete this message from {selectedMessage.SenderName}?");

        if (confirm)
        {
            try
            {
                // Remove all replies first
                Context.MessageReplies.RemoveRange(selectedMessage.Replies);

                // Then remove the message
                Context.Messages.Remove(selectedMessage);

                await Context.SaveChangesAsync();
                await LoadMessages();

                selectedMessage = null;
                await JSRuntime.InvokeVoidAsync("alert", "Message deleted successfully!");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting message: {ex.Message}");
            }
        }
    }

    private async Task SendReply()
    {
        if (selectedMessage == null || string.IsNullOrWhiteSpace(replyMessage)) return;

        try
        {
            var adminUser = AuthStateService.CurrentUser;
            if (adminUser == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Admin user not found.");
                return;
            }

            var reply = new MessageReply
            {
                MessageId = selectedMessage.Id,
                SenderName = adminUser.Name ?? "Administrator",
                SenderEmail = adminUser.Email ?? "admin@university.edu",
                SenderRole = "Admin",
                ReplyContent = replyMessage.Trim(),
                CreatedAt = DateTime.Now
            };

            Context.MessageReplies.Add(reply);
            await Context.SaveChangesAsync();

            // Reload the message to get the updated replies
            await LoadMessages();

            // Reselect the message to show the new reply
            selectedMessage = allMessages.FirstOrDefault(m => m.Id == selectedMessage.Id);

            replyMessage = "";
            await JSRuntime.InvokeVoidAsync("alert", "Reply sent successfully!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error sending reply: {ex.Message}");
        }
    }

    private void ClearReply()
    {
        replyMessage = "";
        StateHasChanged();
    }

    // Helper methods
    private string GetMessageExcerpt(string content, int length = 80)
    {
        if (string.IsNullOrEmpty(content)) return "";
        return content.Length <= length ? content : content.Substring(0, length) + "...";
    }

    private string FormatMessageTime(DateTime dateTime)
    {
        var now = DateTime.Now;
        var difference = now - dateTime;

        if (difference.TotalMinutes < 1)
            return "Just now";
        if (difference.TotalHours < 1)
            return $"{(int)difference.TotalMinutes}m ago";
        if (difference.TotalDays < 1)
            return $"{(int)difference.TotalHours}h ago";
        if (difference.TotalDays < 7)
            return $"{(int)difference.TotalDays}d ago";

        return dateTime.ToString("MMM dd, yyyy");
    }

    private string FormatDetailedTime(DateTime dateTime)
    {
        return dateTime.ToString("MMM dd, yyyy 'at' h:mm tt");
    }

    private void GoBack() => Navigation.NavigateTo("/adminhome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
}

        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>📨 Message Center</h2>
            <div class="header-actions">
                <div class="message-stats">
                    <span class="stat-item @(activeFilter == "all" ? "active" : "")" @onclick='() => SetFilter(" all")'>
                        📬 All: @allMessagesCount
                    </span>
                    <span class="stat-item @(activeFilter == "unread" ? "active" : "")" @onclick='() => SetFilter(" unread")'>
                        📪 Unread: @unreadMessagesCount
                    </span>
                    <span class="stat-item @(activeFilter == "students" ? "active" : "")" @onclick='() => SetFilter(" students")'>
                        🎓 Students: @studentMessagesCount
                    </span>
                    <span class="stat-item @(activeFilter == "teachers" ? "active" : "")" @onclick='() => SetFilter(" teachers")'>
                        👨‍🏫 Teachers: @teacherMessagesCount
                    </span>
                </div>
            </div>
        </div>

        <div class="messages-container">
            @if (isLoading)
            {
                <div class="loading">Loading messages...</div>
            }
            else
            {

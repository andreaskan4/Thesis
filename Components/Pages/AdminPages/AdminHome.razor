@code {
    private bool isAuthChecked = false;
    private bool isAuthorized = false;
    private bool isRefreshing = false;
    private Timer? clockTimer;
    private string currentDate = "";
    private string currentTime = "";
    private int totalUsers = 0;
    private int totalStudents = 0;
    private int totalTeachers = 0;
    private int totalCourses = 0;
    private string lastUpdate = "Just now";
    private string usersTrend = "Loading...";
    private string studentsTrend = "Loading...";
    private string teachersTrend = "Loading...";
    private string coursesTrend = "Loading...";

    private List<ActivityItem> recentActivities = new();

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthorization();
        if (isAuthorized)
        {
            InitializeDashboard();
            StartClock();
            await LoadRealDashboardData();
        }
    }

    private async Task CheckAuthorization()
    {
        for (int i = 0; i < 20; i++)
        {
            if (AuthStateService.CurrentUser != null)
                break;
            await Task.Delay(100);
        }

        var user = AuthStateService.CurrentUser;
        isAuthorized = user != null && user.Role == "Admin";

        isAuthChecked = true;
        await InvokeAsync(StateHasChanged);
    }

    private void InitializeDashboard()
    {
        UpdateDateTime();
    }

    private async Task LoadRealDashboardData()
    {
        try
        {
            Console.WriteLine("Loading real dashboard data from database...");

            var allUsers = await Context.Users.ToListAsync();
            totalUsers = allUsers.Count;
            totalStudents = allUsers.Count(u => u.Role == "Student");
            totalTeachers = allUsers.Count(u => u.Role == "Teacher");

            var allCourses = await Context.Courses.ToListAsync();
            totalCourses = allCourses.Count;

            await LoadRecentActivities(allUsers, allCourses);

            CalculateTrends();

            lastUpdate = DateTime.Now.ToString("hh:mm tt");

            Console.WriteLine($"Dashboard data loaded: {totalUsers} users, {totalStudents} students, {totalTeachers} teachers, {totalCourses} courses");

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
            LoadSampleData();
        }
    }

    private async Task LoadRecentActivities(List<User> users, List<Course> courses)
    {
        recentActivities.Clear();

        try
        {
            var recentGrades = await Context.Grades
                .Include(g => g.Student)
                .Include(g => g.Course)
                .OrderByDescending(g => g.Id)
                .Take(3)
                .ToListAsync();

            foreach (var grade in recentGrades)
            {
                recentActivities.Add(new ActivityItem
                {
                    Icon = "📝",
                    Type = "grade",
                    Title = $"Grade added for {grade.Student?.Name} in {grade.Course?.Name}",
                    Time = "Recently"
                });
            }

            var newCourses = courses.OrderByDescending(c => c.Id).Take(2);
            foreach (var course in newCourses)
            {
                recentActivities.Add(new ActivityItem
                {
                    Icon = "📚",
                    Type = "course",
                    Title = $"New course: {course.Name}",
                    Time = "Recently"
                });
            }

            if (!recentActivities.Any())
            {
                recentActivities.AddRange(new List<ActivityItem>
                {
                    new() { Icon = "👋", Type = "system", Title = "Welcome to Admin Dashboard", Time = "Just now" },
                    new() { Icon = "📊", Type = "system", Title = "System initialized successfully", Time = "Just now" }
                });
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading recent activities: {ex.Message}");
            recentActivities.Add(new ActivityItem
            {
                Icon = "🔔",
                Type = "system",
                Title = "System is running",
                Time = "Just now"
            });
        }
    }

    private void CalculateTrends()
    {
        usersTrend = totalUsers > 0 ? "Active" : "No users";
        studentsTrend = totalStudents > 0 ? $"{totalStudents} enrolled" : "No students";
        teachersTrend = totalTeachers > 0 ? $"{totalTeachers} active" : "No teachers";
        coursesTrend = totalCourses > 0 ? $"{totalCourses} available" : "No courses";
    }

    private void LoadSampleData()
    {
        totalUsers = Context.Users.Count();
        totalStudents = Context.Users.Count(u => u.Role == "Student");
        totalTeachers = Context.Users.Count(u => u.Role == "Teacher");
        totalCourses = Context.Courses.Count();

        CalculateTrends();

        recentActivities = new List<ActivityItem>
        {
            new() { Icon = "⚠️", Type = "warning", Title = "Using cached data", Time = "Just now" },
            new() { Icon = "🔔", Type = "system", Title = "Database connection issue", Time = "Just now" }
        };
    }

    private async Task RefreshData()
    {
        isRefreshing = true;
        StateHasChanged();

        try
        {
            Console.WriteLine("=== REFRESHING DASHBOARD DATA ===");

            totalUsers = 0;
            totalStudents = 0;
            totalTeachers = 0;
            totalCourses = 0;
            recentActivities.Clear();

            StateHasChanged();
            await Task.Delay(100);

            await LoadRealDashboardData();

            Console.WriteLine("=== REFRESH COMPLETE ===");
            Console.WriteLine($"Users: {totalUsers}, Students: {totalStudents}, Teachers: {totalTeachers}, Courses: {totalCourses}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"=== ERROR REFRESHING DATA ===");
            Console.WriteLine($"Error: {ex.Message}");
            Console.WriteLine($"Stack: {ex.StackTrace}");

            LoadSampleData();
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }

    private void NavigateToUsers() => Navigation.NavigateTo("/adminusers");
    private void NavigateToGrades() => Navigation.NavigateTo("/admingrades");
    private void NavigateToCourses() => Navigation.NavigateTo("/admincourses");
    private void NavigateToReports() => Navigation.NavigateTo("/adminreports");

    private void StartClock()
    {
        clockTimer = new Timer(async _ =>
        {
            UpdateDateTime();
            await InvokeAsync(StateHasChanged);
        }, null, 0, 1000);
    }

    private void UpdateDateTime()
    {
        currentDate = DateTime.Now.ToString("dddd, MMMM dd, yyyy");
        currentTime = DateTime.Now.ToString("hh:mm:ss tt");
    }

    private void RedirectToHome() => Navigation.NavigateTo("/", true);

    public void Dispose() => clockTimer?.Dispose();

    private class ActivityItem
    {
        public string Icon { get; set; } = "";
        public string Type { get; set; } = "";
        public string Title { get; set; } = "";
        public string Time { get; set; } = "";
    }
}


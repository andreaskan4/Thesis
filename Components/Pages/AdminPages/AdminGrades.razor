@page "/admingrades"
@inject AuthStateService AuthStateService
@inject GradesService GradesService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Thesis - Manage Grades</PageTitle>

@if (!isAuthChecked)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading Grades Management...</p>
    </div>
}
else if (!isAuthorized)
{
    <div class="unauthorized-container">
        <div class="unauthorized-card">
            <div class="unauthorized-icon">🚫</div>
            <h3>Access Denied</h3>
            <p>You don't have permission to manage grades.</p>
            <button class="btn btn-primary" @onclick="RedirectToHome">Return to Home</button>
        </div>
    </div>
}
else
{
    <div class="admin-grades">
        <div class="header-bar">
            <button class="back-btn" @onclick="GoBack">← Back to Dashboard</button>
            <h2>Manage Student Grades</h2>
        </div>

        @if (isLoading)
        {
            <div class="loading">Loading grades data...</div>
        }
        else if (!Students.Any() || !Courses.Any())
        {
            <div class="no-data-message">
                <h3>No Data Available</h3>
                <p>There are no students or courses available for grade management.</p>
                <div class="data-status">
                    <div>Students: @Students.Count</div>
                    <div>Courses: @Courses.Count</div>
                </div>
            </div>
        }
        else
        {
            <div class="grades-container">
                <div class="grades-table-container">
                    <table class="grades-table">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Course</th>
                                <th>Professor</th>
                                <th>Method</th>
                                <th>Grade</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Students)
                            {
                                @foreach (var course in Courses)
                                {
                                    var existingGrade = Grades.FirstOrDefault(g => g.StudentId == student.Id && g.CourseId == course.Id);
                                    <tr>
                                        <td>@student.Name @student.LastName</td>
                                        <td>@course.Name</td>
                                        <td>@GetProfessorName(course.ProfessorId)</td>
                                        <td>@course.GradingMethod</td>
                                        <td>
                                            @if (existingGrade != null)
                                            {
                                                <strong>@existingGrade.GradeValue</strong>
                                            }
                                            else
                                            {
                                                <span class="no-grade">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (existingGrade != null)
                                            {
                                                <button class="edit-btn" @onclick="() => EditGrade(existingGrade)">Edit</button>
                                                <button class="delete-btn" @onclick="() => DeleteGrade(existingGrade.Id)">Delete</button>
                                            }
                                            else
                                            {
                                                <button class="add-btn" @onclick="() => AddGradeForStudentCourse(student.Id, course.Id)">Add Grade</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="form-section">
                    <h4>@(EditingGrade?.Id == 0 ? "Add New Grade" : "Edit Grade")</h4>

                    <div class="form-field">
                        <label>Student:</label>
                        <select @bind="EditingGrade.StudentId">
                            <option value="0">-- Select Student --</option>
                            @foreach (var student in Students)
                            {
                                <option value="@student.Id">@student.Name @student.LastName</option>
                            }
                        </select>
                    </div>

                    <div class="form-field">
                        <label>Course:</label>
                        <select @bind="EditingGrade.CourseId">
                            <option value="0">-- Select Course --</option>
                            @foreach (var course in Courses)
                            {
                                <option value="@course.Id">@course.Name (@course.GradingMethod)</option>
                            }
                        </select>
                    </div>

                    <div class="form-field">
                        <label>Grade (0-10):</label>
                        <input type="number" step="0.1" min="0" max="10" @bind="EditingGrade.GradeValue" />
                        <small style="color: #666; font-size: 0.8rem;">Scale: 0-10 (e.g., 8.5 = 85%)</small>
                    </div>

                    <div class="form-actions">
                        <button class="save-btn" @onclick="SaveGrade" disabled="@(!IsFormValid())">Save</button>
                        @if (EditingGrade.Id != 0)
                        {
                            <button class="cancel-btn" @onclick="CancelEdit">Cancel</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private bool isAuthorized = false;
    private bool isAuthChecked = false;
    private bool isLoading = false;

    private List<Grade> Grades = new();
    private List<User> Students = new();
    private List<User> Professors = new();
    private List<Course> Courses = new();
    private Grade EditingGrade = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await AuthStateService.InitializeAsync();
            var user = AuthStateService.CurrentUser;

            isAuthorized = user != null && user.Role == "Admin";
            isAuthChecked = true;

            if (isAuthorized)
            {
                await LoadDataAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing: {ex.Message}");
            isAuthChecked = true;
        }
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Load all data
            var gradesTask = GradesService.GetAllGradesAsync();
            var studentsTask = GradesService.GetStudentsAsync();
            var coursesTask = GradesService.GetCoursesAsync();
            var professorsTask = GradesService.GetProfessorsAsync();

            await Task.WhenAll(gradesTask, studentsTask, coursesTask, professorsTask);

            Grades = await gradesTask ?? new List<Grade>();
            Students = await studentsTask ?? new List<User>();
            Courses = await coursesTask ?? new List<Course>();
            Professors = await professorsTask ?? new List<User>();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void AddGradeForStudentCourse(int studentId, int courseId)
    {
        EditingGrade = new Grade
        {
            StudentId = studentId,
            CourseId = courseId,
            GradeValue = 0
        };
        StateHasChanged();
    }

    private string GetProfessorName(int professorId)
    {
        var professor = Professors.FirstOrDefault(p => p.Id == professorId);
        return professor != null ? $"{professor.Name} {professor.LastName}" : "Unknown";
    }

    private void EditGrade(Grade grade)
    {
        EditingGrade = new Grade
        {
            Id = grade.Id,
            StudentId = grade.StudentId,
            CourseId = grade.CourseId,
            GradeValue = grade.GradeValue
        };
        StateHasChanged();
    }

    private void CancelEdit()
    {
        EditingGrade = new Grade();
        StateHasChanged();
    }

    private async Task SaveGrade()
    {
        Console.WriteLine("SaveGrade method called");

        if (!IsFormValid())
        {
            Console.WriteLine("Form validation failed");
            return;
        }

        try
        {
            Console.WriteLine($"Attempting to save grade - StudentId: {EditingGrade.StudentId}, CourseId: {EditingGrade.CourseId}, GradeValue: {EditingGrade.GradeValue}");

            if (EditingGrade.Id == 0)
            {
                Console.WriteLine("Calling AddGradeAsync...");
                await GradesService.AddGradeAsync(EditingGrade);
                Console.WriteLine("AddGradeAsync completed");
            }
            else
            {
                Console.WriteLine("Calling UpdateGradeAsync...");
                await GradesService.UpdateGradeAsync(EditingGrade);
                Console.WriteLine("UpdateGradeAsync completed");
            }

            Console.WriteLine("Grade saved successfully, resetting form...");
            EditingGrade = new Grade();

            Console.WriteLine("Reloading data...");
            await LoadDataAsync();
            Console.WriteLine("Data reloaded successfully");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ ERROR saving grade: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");

            // Show a user-friendly error message
            await JSRuntime.InvokeVoidAsync("alert", $"Error saving grade: {ex.Message}");
        }
    }

    private async Task DeleteGrade(int id)
    {
        try
        {
            await GradesService.DeleteGradeAsync(id);
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting grade: {ex.Message}");
        }
    }

    private bool IsFormValid()
    {
        return EditingGrade.StudentId > 0 &&
               EditingGrade.CourseId > 0 &&
               EditingGrade.GradeValue >= 0 &&
               EditingGrade.GradeValue <= 10;
    }

    private void GoBack() => Navigation.NavigateTo("/adminhome");
    private void RedirectToHome() => Navigation.NavigateTo("/");
}

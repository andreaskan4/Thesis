@inject AuthStateService AuthStateService
@inject NavigationManager NavigationManager

<div class="admin-sidebar">
    <div class="sidebar-header">
        <div class="app-logo">
            <h3>👨‍🏫 Professor Portal</h3>
        </div>
    </div>

    <nav class="sidebar-nav">
        <NavLink class="nav-item" href="/profhome" ActiveClass="active">
            <span class="nav-icon">📊</span>
            <span class="nav-text">Dashboard</span>
        </NavLink>
        <NavLink class="nav-item" href="/profprofile" ActiveClass="active">
            <span class="nav-icon">👤</span>
            <span class="nav-text">Profile</span>
        </NavLink>
        <NavLink class="nav-item" href="/profsettings" ActiveClass="active">
            <span class="nav-icon">⚙️</span>
            <span class="nav-text">Settings</span>
        </NavLink>
        <NavLink class="nav-item" href="/profassignments" ActiveClass="active">
            <span class="nav-icon">📝</span>
            <span class="nav-text">Assignments</span>
        </NavLink>
        <NavLink class="nav-item" href="/profannouncements" ActiveClass="active">
            <span class="nav-icon">📢</span>
            <span class="nav-text">Announcements</span>
        </NavLink>
        <div class="nav-divider"></div>
    </nav>

    <div class="sidebar-footer">
        <div class="user-info">
            <div class="user-avatar">@GetUserInitials()</div>
            <div class="user-details">
                <div class="user-name">@AuthStateService.CurrentUser?.Name</div>
                <div class="user-role">Professor</div>
            </div>
        </div>
        <button class="logout-btn" @onclick="ShowLogoutConfirmation">
            <span class="logout-icon">🚪</span>
            Logout
        </button>
    </div>
</div>

<!-- Logout Modal -->
@if (showLogoutModal)
{
    <div class="modal-overlay" @onclick="CloseLogoutModal">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-icon">
                    <span>⚠️</span>
                </div>
                <h3 class="modal-title">Confirm Logout</h3>
            </div>
            <div class="modal-body">
                <p class="modal-text">Are you sure you want to log out of your account?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="modal-btn modal-btn-cancel" @onclick="CloseLogoutModal">
                    Cancel
                </button>
                <button type="button" class="modal-btn modal-btn-logout" @onclick="ConfirmLogout">
                    <span>🚪</span>
                    Logout
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool showLogoutModal = false;

    private string GetUserInitials()
    {
        var name = AuthStateService.CurrentUser?.Name ?? "";
        if (string.IsNullOrEmpty(name)) return "P";

        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();

        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }

    private void ShowLogoutConfirmation()
    {
        showLogoutModal = true;
        StateHasChanged();
    }

    private void CloseLogoutModal()
    {
        showLogoutModal = false;
        StateHasChanged();
    }

    private async Task ConfirmLogout()
    {
        showLogoutModal = false;
        StateHasChanged();

        await AuthStateService.LogoutAsync();
        NavigationManager.NavigateTo("/", true);
    }
}


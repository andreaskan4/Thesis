                @if (!string.IsNullOrEmpty(profilePictureUrl))
                {
                    <img src="@profilePictureUrl"
                         alt="Profile"
                         class="avatar-image"
                         onerror="this.style.display='none'; this.parentElement.innerHTML='@GetUserInitials()';" />
                    @if (string.IsNullOrEmpty(profilePictureUrl))
                    {
                        <span class="avatar-initials">@GetUserInitials()</span>
                    }
                }
                else
                {
                    <span class="avatar-initials">@GetUserInitials()</span>
                }
            </div>

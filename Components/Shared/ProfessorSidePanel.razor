            <span class="logout-icon">🚪</span>
            Logout
        </button>
    </div>
</div>

@if (showLogoutModal)
{
    <div class="modal-overlay" @onclick="CloseLogoutModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Confirm Logout</h3>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to log out?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" @onclick="CloseLogoutModal">Cancel</button>
                <button type="button" class="btn-danger" @onclick="ConfirmLogout">Logout</button>
            </div>
        </div>
    </div>
}

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private bool showLogoutModal = false;
    private string profilePictureUrl = string.Empty;
    private Timer? profilePictureTimer;
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfilePicture();

        profilePictureTimer = new Timer(async _ =>
        {
            await LoadProfilePicture();
            await InvokeAsync(StateHasChanged);
        }, null, TimeSpan.FromMinutes(1), TimeSpan.FromMinutes(5));

        isInitialized = true;
    }

    private async Task LoadProfilePicture()
    {
        try
        {
            var currentUser = AuthStateService.CurrentUser;
            if (currentUser == null) return;

            var extendedProfile = await Context.ProfessorProfiles
                .FirstOrDefaultAsync(p => p.UserId == currentUser.Id);

            if (extendedProfile != null && !string.IsNullOrEmpty(extendedProfile.ProfilePicture))
            {
                profilePictureUrl = GetProfileImageUrl(extendedProfile.ProfilePicture);
            }
            else
            {
                profilePictureUrl = string.Empty;
            }

            if (isInitialized)
            {
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile picture: {ex.Message}");
            profilePictureUrl = string.Empty;
        }
    }

    private string GetProfileImageUrl(string profilePicture)
    {
        if (string.IsNullOrEmpty(profilePicture))
        {
            return string.Empty;
        }

        if (profilePicture.StartsWith("data:"))
        {
            return profilePicture;
        }

        if (!profilePicture.StartsWith("/") && !profilePicture.StartsWith("http"))
        {
            return "/" + profilePicture;
        }

        return profilePicture;
    }

    private string GetUserInitials()
    {
        var name = AuthStateService.CurrentUser?.Name ?? "";
        var lastName = AuthStateService.CurrentUser?.LastName ?? "";

        if (!string.IsNullOrEmpty(name) && !string.IsNullOrEmpty(lastName))
            return $"{name[0]}{lastName[0]}".ToUpper();

        if (!string.IsNullOrEmpty(name))
            return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();

        return "P";
    }

    private void ShowLogoutConfirmation()
    {
        showLogoutModal = true;
        StateHasChanged();
    }

    private void CloseLogoutModal()
    {
        showLogoutModal = false;
        StateHasChanged();
    }

    private async Task ConfirmLogout()
    {
        showLogoutModal = false;
        StateHasChanged();

        await AuthStateService.LogoutAsync();
        NavigationManager.NavigateTo("/", true);
    }

    public async Task RefreshProfilePicture()
    {
        await LoadProfilePicture();
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        profilePictureTimer?.Dispose();
    }
}

